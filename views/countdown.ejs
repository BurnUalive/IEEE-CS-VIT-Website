<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <title>IEEE CS | VIT Branch</title>
    <script src="/javascript/prefix-free.min.js"></script>
    <link rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel='stylesheet' href='/stylesheets/style.css'/>
    <style media="screen">
        .white {
            color: white;
        }

        main {
            top: 45%;
        }

        @media (max-width: 900px) {
            .main-container h1 {
                font-weight: 900;
                font-size: 28px;
            }
        }

        @media (max-width: 400px) {
            .main-container h1 {
                font-weight: 900;
                font-size: 18px;
            }
        }
    </style>

</head>
<body ng-app="App">
<section class="main-container " id="main-container" ng-controller="MainController">
    <main>
        <header>
            <h1><img height="63" src="http://res.cloudinary.com/gpl/general/ieeecs.png"/>
                <section class="timer-container">

                    <!-- countdown="time in minutes" -->
                    <timer
                            class="timer row"
                            countdown="<%= time %>"
                            interval="1000"
                            finish-callback="finished()"
                            ng-class="timerColor"
                            >

                        <div class="col-xs-offset-2 col-xs-2"><span ng-bind="days"></span><br>
                            <small class="white"> day<span ng-bind="daysS"></span></small>
                        </div>
                        <div class="col-xs-2"><span ng-bind="hours"></span> <br>
                            <small class="white"> hour<span ng-bind="hoursS"></span></small>
                        </div>
                        <div class="col-xs-2"><span ng-bind="minutes"></span><br>
                            <small class="white"> minute<span ng-bind="minutesS"></span></small>
                        </div>
                        <div class="col-xs-2"><span ng-bind="seconds"></span> <br>
                            <small class="white"> second<span ng-bind="secondsS"></span></small>
                        </div>
                </section>

        </header>

    </main>
    <footer>&copy; IEEE-CS, VIT Chapter</footer>
</section>

<link href='https://fonts.googleapis.com/css?family=Lato:400,900' rel='stylesheet' type='text/css'>
<script src="/bower_components/trianglify/dist/trianglify.min.js"></script>
<script type="text/javascript">
    var pattern = Trianglify({
        width: screen.width,
        height: screen.height,
        cell_size: Math.random() * 200 + 40,
        x_colors: 'random',
        variance: Math.random(),
    }).png();
    //console.log(pattern);

    document.getElementById('main-container').setAttribute('style', 'background-image:  linear-gradient(rgba(0, 0, 0, 0.2),rgba(0, 0, 0, 0.2)),url(' + pattern + ')');
</script>
<script src="/bower_components/angular/angular.min.js"></script>

<script src="/bower_components/moment/moment.js"></script>
<script src="/bower_components/humanize-duration/humanize-duration.js"></script>
<script src="/bower_components/angular-timer/dist/angular-timer.min.js"></script>

<script type="text/javascript">
    angular.module("App", ["timer"])
            .controller("MainController", function ($scope) {
            });

</script>
</body>
</html>
